@model List<prg1.ViewModels.UserModel>
@{
    
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <span>Üyeler Listesi</span>
}

<div class="container-fluid">
    <a asp-action="Add" asp-controller="User" class="btn btn-primary btn-sm mb-3">
        <i class="fa fa-plus"></i> Yeni Üye Ekle
    </a>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Fotoğraf</th>
                    <th>Adı Soyadı</th>
                    <th>Kullanıcı Adı</th>
                    <th>E-Posta</th>
                    <th>Yetkiler</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 80px;">
                            @if (string.IsNullOrEmpty(item.ImagePath) || item.ImagePath == "no-img.png")
                            {
                                <img src="/img/default.png" width="50" height="50" class="rounded-circle border" />
                            }
                            else
                            {
                                <img src="/img/@item.ImagePath" alt="Profil Resmi" width="50" height="50" class="rounded-circle border" style="object-fit:cover;" />
                            }
                        </td>
                        <td class="align-middle">@item.FullName</td>
                        <td class="align-middle">@item.UserName</td>
                        <td class="align-middle">@item.Email</td>
                        <td class="align-middle">
                            <a asp-action="UserRole" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                Yetkiler
                            </a>
                        </td>
                        <td class="align-middle">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
