@model List<prg1.ViewModels.UserRoleModel>

@{
    
    Layout = "_LayoutAdmin";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Rol Atama: @ViewBag.UserName</h6>
    </div>
    <div class="card-body">

        <form method="post">
            <input type="hidden" name="userId" value="@ViewBag.UserId" />

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Rol Adı</th>
                        <th style="width: 150px;">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].RoleName
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                            </td>
                            <td>
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" asp-for="@Model[i].IsSelected" id="role_@i">
                                    <label class="custom-control-label" for="role_@i">Yetki Ver</label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-primary mt-3">Değişiklikleri Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
        </form>

    </div>
</div>