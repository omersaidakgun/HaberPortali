@model List<prg1.ViewModels.UserRoleModel>
@{
    ViewData["Title"] = "Rol Atama";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section CardHeader {
    <span>Rol Yönetimi</span>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Rol Adı</th>
                <th>Mevcut Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoleName</td>
                    <td>
                        @if (item.IsSelected)
                        {
                            <span class="badge bg-success">Yetkisi Var</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Yetkisi Yok</span>
                        }
                    </td>
                    <td>
                        @if (item.IsSelected)
                        {
                            <a asp-action="UserRoleDelete" asp-route-id="@item.RoleId" asp-route-userId="@item.UserId" class="btn btn-danger btn-sm">
                                <i class="fa fa-minus-circle"></i> Yetkiyi Al
                            </a>
                        }
                        else
                        {
                            <a asp-action="UserRoleAdd" asp-route-id="@item.RoleId" asp-route-userId="@item.UserId" class="btn btn-success btn-sm">
                                <i class="fa fa-plus-circle"></i> Yetki Ver
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>