@model prg1.ViewModels.UserModel
@{
    ViewData["Title"] = "Yeni Üye Ekle";
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <span>Yeni Üye Ekle</span>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Role" value="Uye" />

            <div class="mb-3 row">
                <label asp-for="FullName" class="col-sm-3 col-form-label">Adı Soyadı</label>
                <div class="col-sm-9">
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-3 col-form-label">Kullanıcı Adı</label>
                <div class="col-sm-9">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-3 col-form-label">E-Posta</label>
                <div class="col-sm-9">
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-3 col-form-label">Parola</label>
                <div class="col-sm-9">
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </div>

        </form>
        <form method="post" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

        </form>
    </div>
</div>