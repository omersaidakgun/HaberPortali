@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin Paneli";
}

<h1 class="h3 mb-4 text-gray-800">Admin Sayfası</h1>

<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            <a asp-controller="Category" asp-action="Index">Kategoriler</a>
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="catCount">-</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            <a asp-controller="Haber" asp-action="Index" class="text-success">Haberler</a>
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="haberCount">-</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-6">
        <div id="divResult" style="display:none;"></div>
    </div>
</div>

@section Scripts {
    <script>
        
        var connectionHub = new signalR.HubConnectionBuilder()
            .withUrl("/general-hub", signalR.HttpTransportType.WebSockets)
            .configureLogging(signalR.LogLevel.Information)
            .build();

       
        connectionHub.on("onCategoryAdd", (d) => {
            $("#catCount").html(d);
            $("#divResult")
                .show()
                .removeClass()
                .addClass("alert alert-primary")
                .html("Kategori Eklendi")
                .fadeOut(5000);
        });
        connectionHub.on("onCategoryUpdate", (d) => {
            $("#catCount").html(d);
            $("#divResult")
                .show()
                .removeClass()
                .addClass("alert alert-primary")
                .html("Kategori Güncellendi")
                .fadeOut(5000);
        });
        connectionHub.on("onCategoryDelete", (d) => {
            $("#catCount").html(d);
            $("#divResult")
                .show()
                .removeClass()
                .addClass("alert alert-primary")
                .html("Kategori Silindi")
                .fadeOut(5000);
        });

        
        connectionHub.on("onHaberAdd", (d) => {
            $("#haberCount").html(d);
            $("#divResult")
                .show()
                .removeClass()
                .addClass("alert alert-success")
                .html("Haber Eklendi")
                .fadeOut(5000);
        });
        connectionHub.on("onHaberUpdate", (d) => {
            $("#haberCount").html(d);
            $("#divResult")
                .show()
                .removeClass()
                .addClass("alert alert-success")
                .html("Haber Güncellendi")
                .fadeOut(5000);
        });
        connectionHub.on("onHaberDelete", (d) => {
            $("#haberCount").html(d);
            $("#divResult")
                .show()
                .removeClass()
                .addClass("alert alert-success")
                .html("Haber Silindi")
                .fadeOut(5000);
        });

        // start connection
        function fullfilled() {
            console.log("Bağlantı Başarılı");
        }
        function rejected() {
            console.log("Bağlantı Hatalı");
        }
        connectionHub.start().then(fullfilled, rejected);

    </script>
}