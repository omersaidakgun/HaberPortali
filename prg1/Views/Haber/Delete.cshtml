@{
    Layout = "_LayoutAdmin";
}
@model prg1.ViewModels.HaberModel
@section CardHeader {
    <span>Haber Sil</span>
}

<h4>"@Model.Baslik" başlıklı haber silinecektir, Onaylıyor musunuz?</h4>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
    <a asp-action="Index" class="btn btn-primary btn-sm">Vazgeç</a>
</form>