@model List<prg1.ViewModels.HaberModel>
@{
    Layout = "_LayoutAdmin";
    
}

@section CardHeader {
    <div class="d-flex justify-content-between align-items-center w-100">
        <span class="m-0 font-weight-bold text-primary">Haber Listesi</span>
        <a asp-action="Add" class="btn btn-primary btn-sm shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Haber
        </a>
    </div>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th style="width:100px;">Görsel</th>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Durum</th>
                <th style="width:150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ResimYolu))
                        {
                            <img src="~/img/@item.ResimYolu" width="80" height="50" style="object-fit:cover; border-radius:5px;" />
                        }
                        else
                        {
                            <span class="badge badge-secondary">Yok</span>
                        }
                    </td>
                    <td>@item.Baslik</td>
                    <td><span class="badge badge-info">@item.CategoryId</span></td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge badge-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-circle">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-circle">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>