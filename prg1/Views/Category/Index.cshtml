@model List<prg1.Models.Category>
@{
    
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <span>Kategori Listesi</span>
}

<div class="container-fluid">
    <a asp-action="Add" class="btn btn-primary btn-sm mb-3">
        <i class="fa fa-plus"></i> Yeni Kategori Ekle
    </a>

    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Kategori Adı</th>
                <th>Durum</th>
                <th style="width: 200px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>